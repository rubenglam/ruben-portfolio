<script type="module">
	const isDarkMode = document.documentElement.className.includes('dark');
	const btnTheme = document.querySelector('#btnTheme');
	const btnThemeDarkModeClass = 'bi bi-moon-stars-fill';
	const btnThemeLightModeClass = 'bi bi-brightness-high-fill';
	btnTheme.addEventListener('click', function () {
		document.documentElement.classList.toggle('dark');
		btnTheme.children[0].classList.toggle(btnThemeDarkModeClass);
	});
</script>
